$resultf = mysql_query($sql_fields) or die(mysql_error());
while($rowm = mysql_fetch_array($resultm)){
$resultf = mysql_query($sql_fields) or die(mysql_error());
while($rowf=mysql_fetch_array($resultf)){
$mfields[$rowf['name']] = $rowm[$rowf['name']];
}
$memp[$empid] = $mfields;
$memp[$rowm['empid']] = $mfields;
}


error_reporting(0);
